<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0ECE3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hwa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="화성시 화성방조제길"
            android:textColor="#000000"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/hwatext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="구간 약 11.5km"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/hwa_map"
            android:layout_width="341dp"
            android:layout_height="213dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            app:srcCompat="@mipmap/hwa" />

        <TextView
            android:id="@+id/hwatext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="카카오지도로 보기"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black" />

        <ImageView
            android:id="@+id/hwapic"
            android:layout_width="347dp"
            android:layout_height="184dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:scaleType="centerInside"
            app:srcCompat="@mipmap/hwa_1" />

        <TextView
            android:id="@+id/hwatext3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="코스명 : (화성시) 화성방조제"
            android:textColor="#030305"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/hwatext4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="위치 : 매향리 ~ 궁평항"
            android:textColor="#030305"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/hwatext5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="주소 : 경기도 화성시 우정읍 기아자동차로 199   매향리 역사관"
            android:textColor="#030305"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/hwatext6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/hashtag"
            android:text="#매향리와 궁평항을 잇는 10km의 화성방조제\n#접근성 좋은 경기남부의 드라이브코스\n
#방조제 전체가 건물 하나 없는 직선 도로\n 전방의 먼 곳에서 아른거리는 아지랑이를 바라보고 있노라면, 마치 지평선을 향해 달리는 영화 속 장면에 들어 온 느낌이 든다."
            android:textColor="#0359AE"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/nearbyhwasung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/hashtag"
            android:text="근처 관광지: 궁평항, 전곡항"
            android:textColor="#0359AE"
            android:textSize="13sp" />

        <Button
            android:id="@+id/hwasung_ON"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="즐겨찾기 추가" />

    </LinearLayout>


</ScrollView>