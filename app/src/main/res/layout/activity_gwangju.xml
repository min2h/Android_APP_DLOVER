<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0ECE3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/gwang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="광주시 남한산성,\n팔당호 벚꽃길"
            android:textColor="#000000"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/gwangtext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="구간 약 20.3km"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/gwang_map"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            app:srcCompat="@mipmap/gwang_1" />

        <TextView
            android:id="@+id/gwangtext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="카카오지도로 보기"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/gwangpic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:scaleType="centerInside"
            app:srcCompat="@mipmap/gwang" />

        <TextView
            android:id="@+id/gwangtext3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="코스명 : (광주시) 남한산성,팔당호 벚꽃길"
            android:textColor="#030305"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/gwangtext4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="위치 : 남한산성면 ~ 남종면"
            android:textColor="#030305"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/gwangtext5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="주소 : 경기도 광주시 남한산성면 남한산성로 2 \n남한산성면행정복지센터
\n경기도 광주시 남종면 산수로 1692 \n팔당수질개선본부"
            android:textColor="#030305"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/gwangtext6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/hashtag"
            android:text="#산성천 맑은 물과 벚나무가 싱그러움을 선사\n#팔당호 벚꽃길은 3,000여 그루의 벚나무가 장관을 이루는 길\n
#팔당호 경관과 어울려 한폭의 수채화를 선물"
            android:textColor="#0359AE"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/nearbygwangju"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/hashtag"
            android:text="근처 관광지: 경안천습지생태공원"
            android:textColor="#0359AE"
            android:textSize="13sp" />

        <Button
            android:id="@+id/gwangju_ON"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="즐겨찾기 추가" />

    </LinearLayout>


</ScrollView>